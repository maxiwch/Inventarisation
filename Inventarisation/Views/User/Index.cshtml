@model IEnumerable<Inventarisation.Models.Transfer>

<h1>@ViewBag.fio</h1>
<h3>@ViewBag.deps</h3>


@using (Html.BeginForm())
{

    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check " name="btnradio" id="btnradio1" autocomplete="off" value = "on"
         @ViewBag.check1
        onchange='this.form.submit();'>
  <label class="btn btn-outline-primary" for="btnradio1">В использовании</label>

  <input type="radio" class="btn-check " name="btnradio" id="btnradio2" autocomplete="off" value = "off" @ViewBag.check2 onchange='this.form.submit();'>
  <label class="btn btn-outline-primary" for="btnradio2">Использованные за все время</label>

</div>
    
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Device.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Device.Producer.Name)

            </th>
              <th>
                @Html.DisplayNameFor(model => model.Device.TypeOfDevice.Name)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.DateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEnd)
            </th>
           <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Producer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.TypeOfDevice.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)

            </td>
              <td>
                @Html.DisplayFor(modelItem => item.DateEnd)

            </td>

            <td>
                       <a asp-controller = "Devices" asp-action="Details" asp-route-id="@item.Id">Детали</a> 
            </td>
           
        </tr>
}
    </tbody>
</table>