@model Inventarisation.Models.Transfer

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>
<p>@ViewData["ErrorMessage"]</p>

<h4>Трансфер</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
              @Html.DisplayNameFor(model => model.Employee.Name)

                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeesId"></select>
            </div>
            <div class="form-group">
              @Html.DisplayNameFor(model => model.Device.Name)

                <select asp-for="DeviceId" class ="form-control" asp-items="ViewBag.DeviceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentsStart" class="control-label"></label>
                <input asp-for="CommentsStart" class="form-control" />
                <span asp-validation-for="CommentsStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentsEnd" class="control-label"></label>
                <input asp-for="CommentsEnd" class="form-control" />
                <span asp-validation-for="CommentsEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
